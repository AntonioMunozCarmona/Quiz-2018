<h1>Users</h1>

<table>
    <% for (var i in users ) { %>
        <tr>
            <td>
                <a href="/users/<%= users[i].id %>" ><%= users[i].username %></a>
                <%= users[i].isAdmin ? 'admin' : '' %>
            </td>
            <!-- Si est치 logueado dejar치 editar o borrar usuarios -->
            <% if ( session.user ) { %>
            
                <td>
                    <a href="/users/<%= users[i].id %>/edit"><button>Edit</button></a>
                </td>
                <td>
                    <a href="/users/<%= users[i].id %>?_method=DELETE"
                        onClick="return confirm('Delete user: <%= users[i].username %>');">
                         <button>delete</button>
                     </a>
                </td>
            <% } %>
        </tr>
    <% } %>
</table>

<!-- Si est치 logueado dejar치 crear nuevos usuarios -->
<% if ( session.user ) { %>
    <a href="/users/new"><button tye="button">Create NEW user</button></a>
<% } %>