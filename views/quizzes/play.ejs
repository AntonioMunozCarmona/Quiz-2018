<h1>Play:</h1>

<form action="/quizzes/<%= quiz.id %>/check" method="get">
    <p>Question: <b><%= quiz.question %></b></p>

    <div class="wideRow">
        <input type="text" class="itemWide" name="answer"
            value="<%= answer %>" placeholder="Answer"
            autocomplete="off" />
        <input type="submit" value="Check" class="itemNarrow" />  
    </div>
</form>

<a href="/quizzes"><button>Go Back</button></a>